@model Event

@{
    ViewData["Title"] = "Add New Event";
}

<h2 class="text-center">@ViewData["Title"]</h2>

<div class="container">
    <div class="row">
        <div class="col-md-8 col-lg-6 mx-auto">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">New Event Information</h5>
                </div>
                <div class="card-body">
                    <form asp-action="CreateEvent" method="post">
                        <div class="form-group mb-3">
                            <label for="DriverId" class="control-label">Select Driver</label>
                            <select asp-for="DriverId" class="form-control" required>
                                <option value="">Select Driver</option>
                                @foreach (var driver in ViewBag.Drivers)
                                {
                                    <option value="@driver.Value">@driver.Text</option>
                                }
                            </select>
                            <span asp-validation-for="DriverId" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Description" class="control-label"></label>
                            <input asp-for="Description" class="form-control" required />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="TimeOfEvent" class="control-label">Time of Event</label>
                            <input asp-for="TimeOfEvent" class="form-control" type="datetime-local" required />
                            <span asp-validation-for="TimeOfEvent" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="AmountIn" class="control-label">Amount In</label>
                            <input asp-for="AmountIn" class="form-control" type="number" step="0.01" required />
                            <span asp-validation-for="AmountIn" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="AmountOut" class="control-label">Amount Out</label>
                            <input asp-for="AmountOut" class="form-control" type="number" step="0.01" required />
                            <span asp-validation-for="AmountOut" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary">Add Event</button>
                    </form>
                </div>
                <div class="card-footer text-center">
                    
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary">Back to Dashboard</a>
                    }
                    else
                    {
                        <a asp-action="Index" class="btn btn-secondary">Back to Events List</a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
