@model IEnumerable<ApplicationUser>  

@{
    ViewData["Title"] = "Employees";
}

<h2>Employees</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Fullname</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.FirstName @employee.LastName</td>
                <td>@employee.Email</td>
                <td>
                    <a asp-action="Details" asp-route-id="@employee.Id" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-warning">Update</a>
                    <form asp-action="Delete" asp-route-id="@employee.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this employee?');">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-success" id="register" asp-area="Identity" asp-page="/Account/Register">Register a new employee</a>